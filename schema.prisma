datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Content {
  id           String    @id @default(uuid()) @postgresql.Uuid
  title        String    @default("")
  sectionName  String    @default("")
  description  String    @default("")
  isComplete   Boolean   @default(false)
  publishDate  DateTime? @default(now())
  photo        Image[]   @relation("Image_content")
  rating       Int?
  author       User?     @relation("Content_author", fields: [authorId], references: [id])
  authorId     String?   @map("author") @postgresql.Uuid
  relatedLinks Json?
  content      Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  content2     Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")

  @@index([authorId])
}

model Image {
  id              String    @id @default(uuid()) @postgresql.Uuid
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  altText         String    @default("")
  publishDate     DateTime? @default(now())
  content         Content?  @relation("Image_content", fields: [contentId], references: [id])
  contentId       String?   @map("content") @postgresql.Uuid

  @@index([contentId])
}

model User {
  id       String        @id @default(uuid()) @postgresql.Uuid
  name     String        @default("")
  email    String        @unique @default("")
  password String
  content  Content[]     @relation("Content_author")
  role     UserRoleType? @default(AUTHOR)
}

enum UserRoleType {
  SUPER_ADMIN
  ADMIN
  AUTHOR
}